  "overview": {
    "title": "Project Overview",
    "subtitle": "Detailed analysis of mail management system development for camps",
    "projectSummary": {
      "title": "About the Project",
      "description": "Email Camp is a digital solution for automating the process of receiving and issuing mail in camps. The system eliminates the need for daily manual mail searches and provides instant notifications to camp residents.",
      "problem": "Problem: Every day after 2:00 PM, many people come to the info point asking \"Are there any letters for me?\". Staff are forced to manually check each room's folders, wasting time even when there are no letters.",
      "solution": "Solution: When mail arrives, staff register letters in the system through QR codes on room folders. Residents receive automatic notifications and come for mail only when it's guaranteed to be there."
    },
    "steps": {
      "1": {
        "title": "Mail Arrival at Camp",
        "description": "Postman delivers letters, staff sorts by rooms",
        "details": [
          "Each room folder has two QR codes attached",
          "QR code \"Receive\" - for registration of arrival",
          "QR code \"Issue\" - for marking receipt",
          "Letters are placed in corresponding folders"
        ]
      },
      "2": {
        "title": "Quick Registration via QR",
        "description": "Staff scans the folder's QR code and registers the letter in seconds",
        "details": [
          "Scanning \"Receive\" QR code on room folder",
          "Selecting letter recipient from residents list",
          "Photographing the letter for confirmation",
          "Automatic saving to database"
        ]
      },
      "3": {
        "title": "Instant Notifications",
        "description": "Camp resident immediately receives notification about the letter",
        "details": [
          "Automatic Email notification sending",
          "Telegram bot message (if connected)",
          "Notification contains letter information",
          "Resident knows for sure that there's a letter"
        ]
      },
      "4": {
        "title": "Targeted Info Point Visit",
        "description": "Resident comes only knowing that the letter is guaranteed to be there",
        "details": [
          "No daily \"checking\" visits",
          "Resident is confident about letter presence",
          "No queues and time waste",
          "Efficient use of everyone's time"
        ]
      },
      "5": {
        "title": "Quick Letter Issue",
        "description": "Staff scans \"Issue\" QR and hands over the letter",
        "details": [
          "Scanning \"Issue\" QR code on folder",
          "Quick letter search in the right folder",
          "Marking issue in the application",
          "Handing letter to camp resident",
          "Automatic process closure"
        ]
      }
    },
