{
  "name": "email_camp",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:strict": "next lint --max-warnings 0",
    "lint:fix": "eslint --fix \"src/**/*.{js,jsx,ts,tsx}\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "check": "npm run lint:strict && npm run format:check && npx tsc --noEmit",
    "fix": "npm run lint:fix && npm run format",
    "pre-commit": "npm run check",
    "screenshots": "node scripts/take-screenshots.cjs",
    "screenshots:update": "node scripts/update-screenshots.cjs",
    "screenshots:check": "node scripts/update-screenshots.cjs check",
    "screenshots:all": "node scripts/update-screenshots.cjs all",
    "gallery:update": "node scripts/update-screenshots.cjs gallery"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@headlessui/react": "^1.7.18",
    "@heroicons/react": "^2.1.1",
    "@mui/icons-material": "^7.1.1",
    "@mui/material": "^7.1.1",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@supabase/auth-helpers-nextjs": "^0.9.0",
    "@supabase/auth-ui-react": "^0.4.7",
    "@supabase/auth-ui-shared": "^0.1.8",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.28.0",
    "@types/react-syntax-highlighter": "^15.5.13",
    "browser-image-compression": "^2.0.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dexie": "^3.2.4",
    "framer-motion": "^12.16.0",
    "html5-qrcode": "^2.3.8",
    "idb": "^8.0.0",
    "lucide-react": "^0.513.0",
    "next": "14.1.0",
    "node-telegram-bot-api": "^0.64.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-syntax-highlighter": "^15.6.1",
    "resend": "^4.5.1",
    "sonner": "^2.0.5",
    "tailwind-merge": "^3.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.53.0",
    "@tailwindcss/forms": "^0.5.7",
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.17",
    "canvas": "^3.1.0",
    "css-loader": "^7.1.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "14.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "style-loader": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "5.0.4"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "src/**/*.{json,css,md}": [
      "prettier --write"
    ]
  }
}
